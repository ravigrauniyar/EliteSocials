@{
    ViewData["Title"] = "TFA";

    if (ViewData["TFAMessage"] == null)
    {
        <h2 class="text-dark">
            OTP for TFA
        </h2>
        <p class="text-dark my-3">
            An OTP for Two Factor Authentication was sent to your email.
        </p>
        <form asp-controller = "EliteSocials" asp-action="TFA" method="post">

            <input type="password" name="otp" placeholder="Enter OTP here" />

            <button class="w-100 mt-3" type="submit">Verify</button>
        </form>
    }
    else
    {
        <h3 class="text-danger">
            @ViewData["TFAMessage"]
        </h3>
    }
}
